{
  "name": "jitsi-meet-electron-simple",
  "version": "1.0.0",
  "description": "A simple electron app for jitsi meet",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "test:ci": "xvfb-run -a npm test",
    "test": "playwright test"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "electron": "^40.4.1",
    "electron-builder": "^26.8.0"
  },
  "build": {
    "appId": "org.jitsi.meet.electron.simple",
    "productName": "Jitsi Meet Simple",
    "directories": {
      "buildResources": "resources"
    },
    "files": [
      "main.js",
      "index.html",
      "external_api.js",
      "renderer.js"
    ],
    "mac": {
      "category": "public.app-category.video",
      "target": [
        {
          "arch": "universal",
          "target": "dmg"
        },
        {
          "arch": "universal",
          "target": "zip"
        }
      ],
      "entitlements": "resources/entitlements.mac.plist",
      "extendInfo": {
        "NSCameraUsageDescription": "Jitsi Meet requires access to your camera in order to make video-calls.",
        "NSMicrophoneUsageDescription": "Jitsi Meet requires access to your microphone in order to make calls (audio/video)."
      }
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage",
      "category": "Network"
    }
  }
}
