{
  "name": "jitsi-meet-electron-simple",
  "version": "1.0.0",
  "description": "A simple electron app for jitsi meet",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "test:ci": "xvfb-run -a npm test",
    "test": "playwright test"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "electron": "^40.1.0",
    "electron-builder": "^26.7.0"
  },
  "dependencies": {
    "@jitsi/electron-sdk": "^9.0.0"
  },
  "build": {
    "appId": "com.jitsi.meet.electron.simple",
    "productName": "Jitsi Meet Simple",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "index.html",
      "external_api.js",
      "renderer.js",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.video"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage",
      "category": "Network"
    }
  }
}
